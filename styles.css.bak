.list {
	border-radius: 6px;
	box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
}

.list:nth-of-type(2n + 1) {
	background-color: #cccccc;
}

.list:nth-of-type(3n) {
  background: green;
}

.list:nth-of-type(3n + 1) {
  background: red;
}

.list:nth-of-type(3n + 2) {
  background: blue;
}

