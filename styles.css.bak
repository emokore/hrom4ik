body {

	height: 100vh;
	display: flex;
	flex-direction: column;
	flex-grow: 1;
	position: relative;
	font-family: Georgia, serif;
	color: #ccc;
		background-image: url("big.png");
	background-repeat: no-repeat;
	background-size: 100%;
}

.container {
	max-width: 1920px;
	width: 100%;
	padding: 0 20px;
	margin: 0 auto;

}

#plov {
    position: fixed;
    top: 12%;
    left: 60%;
    translate: -50%, -50%;
    border-radius: 50%;
    overflow: hidden;
	animation: 4s linear 0s infinite alternate rotateInfinite forwards;
    transform-origin: center;
}

@keyframes rotateInfinite {
	
	from {
		rotate: 0deg;
	}
	
	to {
		rotate: 360deg;
	}
}

.container__grid {
	display: grid;
	grid-template-columns: 1fr 0.2fr;
	gap: 50px;
}

.container__social {
	display: flex;
	flex-direction: column;
}

#lubimii {
	display: grid;
	grid-template-columns: repeat(2, 1fr);
	margin-top: 2%;
	width: 35%;
	gap: 20px;
	flex-grow: 1;
}
